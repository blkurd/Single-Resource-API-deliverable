{% layout 'layout.liquid' %}
{% block content %}
    <!-- we need to account for two conditions here -->
    <!-- first, if we have cars in our array -->
    <!-- second, if there are no cars in the array -->
    {% if cars.length > 0 %}
        <div class="container-md">
            <h2>All Cars</h2>
            <div class="row">
                {% for car in cars %}
                    <div class="card me-3 mb-3" style="width: 18rem;">
                        <h5 class="card-header">{{car.name}}</h5>
                        <div class="card-body">
                            <h5 class="card-title">
                                {% if car.readyToRide %}
                                For sale
                                {% else %}
                                Not for sale
                                {% endif %}
                            </h5>
                            <p class="card-text">The color of this {{car.name}} is {{car.color}}</p>
                            <div class="colorBox mb-2" style="background-color: {{car.color}}"></div>
                            <a href="/cars/{{car.id}}" class="btn btn-info">View {{car.name}}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="container-md">
            <h2>No cars yet... will offer ones for you soon!</h2>
        </div>
    {% endif %}
{% endblock %}